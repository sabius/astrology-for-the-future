---
interface Props {
  header?: string;
  copy?: string;
  email?: string;
  phone?: string;
  address?: string;
}

const { header, copy, email, phone, address } = Astro.props;
---

<section class="py-16 px-4 md:px-8 bg-white">
  <div class="max-w-4xl mx-auto">
    {header && (
      <h2 class="text-4xl md:text-5xl font-bold text-center mb-6">
        {header}
      </h2>
    )}
    
    {copy && (
      <p class="text-lg text-center mb-12 text-gray-700">
        {copy}
      </p>
    )}

    <div class="grid md:grid-cols-2 gap-8">
      <div class="space-y-6">
        <h3 class="text-2xl font-semibold mb-4">Contact Information</h3>
        
        {email && (
          <div class="flex items-start gap-3">
            <span class="text-2xl">ğŸ“§</span>
            <div>
              <p class="font-medium text-gray-900">Email</p>
              <a 
                href={`mailto:${email}`}
                class="text-blue-600 hover:text-blue-800 underline"
              >
                {email}
              </a>
            </div>
          </div>
        )}

        {phone && (
          <div class="flex items-start gap-3">
            <span class="text-2xl">ğŸ“</span>
            <div>
              <p class="font-medium text-gray-900">Phone</p>
              <a 
                href={`tel:${phone}`}
                class="text-blue-600 hover:text-blue-800"
              >
                {phone}
              </a>
            </div>
          </div>
        )}

        {address && (
          <div class="flex items-start gap-3">
            <span class="text-2xl">ğŸ“</span>
            <div>
              <p class="font-medium text-gray-900">Address</p>
              <p class="text-gray-700">{address}</p>
            </div>
          </div>
        )}
      </div>

      <div class="bg-gray-50 p-6 rounded-lg">
        <h3 class="text-2xl font-semibold mb-4">Get in Touch</h3>
        <p class="text-gray-700 mb-4">
          Ready to book your astrology reading? Send us an email and we'll get back to you as soon as possible.
        </p>
        {email && (
          <a
            href={`mailto:${email}`}
            class="inline-block bg-blue-600 text-white px-6 py-3 rounded-lg hover:bg-blue-700 transition-colors font-medium"
          >
            Send Email
          </a>
        )}
      </div>
    </div>
  </div>
</section>
