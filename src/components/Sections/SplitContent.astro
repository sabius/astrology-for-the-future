---
import ResponsivePicture from "../UI/ResponsivePicture.astro";

const { header, copy, columns = [], background_color = "" } = Astro.props;

const normalizedColumns = columns.slice(0, 2).map((column) => ({
  ...column,
  items:
    column?.items?.map((item) => ({
      ...item,
      copySegments: Array.isArray(item?.copy)
        ? item.copy
        : item?.copy
          ? [item.copy]
          : [],
    })) ?? [],
}));
---

<section
  class="split-content-section px-6 py-12 md:py-20 lg:py-24"
  style={{ backgroundColor: background_color ?? "" }}
>
  <div class="container">
    {
      (header || copy) && (
        <div class="text-center mb-16">
          {header && <h2 class="text-3xl md:text-5xl font-bold">{header}</h2>}
          {copy && (
            <p class="text-3xl text-gray-700 max-w-3xl mx-auto">{copy}</p>
          )}
        </div>
      )
    }
  </div>
  <div
    class="grid w-full max-w-5xl grid-cols-1 gap-10 md:grid-cols-2 md:gap-14 mx-auto"
  >
    {
      normalizedColumns.map((column) => (
        <div class="flex flex-col gap-10 md:gap-14">
          {column.items?.map((item) =>
            item?.image ? (
              <figure class="flex flex-col gap-4">
                <ResponsivePicture
                  src={item.image}
                  alt={item.image_alt ?? ""}
                  class="overflow-hidden rounded-[32px] shadow-md"
                  imageClass="h-full w-full object-cover"
                />
                {item?.legend && (
                  <figcaption class="text-sm leading-relaxed md:text-base">
                    {item.legend}
                  </figcaption>
                )}
              </figure>
            ) : (
              <article
                class={`flex flex-col gap-4 ${
                  item?.boxed
                    ? "rounded-[32px] bg-white p-8 shadow-lg md:p-10"
                    : ""
                }`}
              >
                {item?.heading && (
                  <h3 class="text-2xl font-bold tracking-[0.01em] md:text-[2rem]">
                    {item.heading}
                  </h3>
                )}
                {item?.copySegments?.map((paragraph) => (
                  <p class="text-lg leading-relaxed md:text-xl">{paragraph}</p>
                ))}
                {item?.meta && <p class="text-base md:text-lg">{item.meta}</p>}
              </article>
            ),
          )}
        </div>
      ))
    }
  </div>
</section>
