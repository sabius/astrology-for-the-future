---
import { marked } from 'marked';
import DOMPurify from 'isomorphic-dompurify';

import Button from "../UI/Button.astro";
import ResponsivePicture from "../UI/ResponsivePicture.astro";

const {
  header,
  copy,
  image,
  image_alt,
  list_items,
  button
} = Astro.props;
---

<!-- Map Section -->
<section class="feature-card py-16">
  <div class="container">
    {(header || copy) && (
      <div class="text-center mb-16">
        {header && <h2 class="text-3xl md:text-5xl font-bold">{header}</h2>}
        {copy && <p class="text-3xl text-gray-700 max-w-3xl mx-auto">
          {copy}
        </p>}
      </div>
    )}

    <div class="grid grid-cols-1 md:grid-cols-2 gap-8 items-center">
      <div class="bg-gray-200 rounded-lg overflow-hidden aspect-square max-w-[26rem] md:max-h-[600px] mx-auto md:mx-auto w-full">
        {image && <ResponsivePicture src={image} alt={image_alt} imageClass="w-full h-full object-cover object-center" />}
      </div>

      <div>
        <div class="bg-white p-8 rounded-lg shadow-md">
            {list_items && list_items.map(async (card_item) => {
              const rawCardHtml = await marked.parse(card_item.copy ?? '');
              const cleanCardHtml = DOMPurify.sanitize(rawCardHtml);

              return <div>
                {card_item.heading && <h4 class="font-bold text-2xl mb-2">{card_item.heading}</h4>}
                {card_item.copy && <div class="text-gray-950 text-xl" set:html={cleanCardHtml} />}
              </div>
            })}
          </div>

          {button &&
            <div class="mt-6">
              <Button href={button.url} target="_blank" variant={button.variant}>
                {button.text}
              </Button>
            </div>
          }
        </div>
      </div>
    </div>
  </div>
</section>
