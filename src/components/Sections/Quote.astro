---
const {
  quote,
  author,
} = Astro.props;
---

{quote && (
  <section class="section-quote py-20 px-4">
    <div class="container">
      <figure class="mx-auto max-w-4xl text-center">
        <blockquote class="text-xl md:text-[1.5rem] leading-relaxed italic tracking-wide text-[#1F1534]">
          <span class="block">“{quote}”</span>
        </blockquote>
        {author && (
          <figcaption class="mt-10 text-xl md:text-[1.5rem] font-medium text-[#6B4FAE]">
            {author}
          </figcaption>
        )}
      </figure>
    </div>
  </section>
)}
