---
import Button from "../UI/Button.astro";

const {
  header,
  copy,
  cards
} = Astro.props;
---

<section class="section-feature-grid py-16">
  <div class="container mx-auto px-6">
    {header && (
      <h2 class="text-3xl md:text-5xl font-bold text-center mb-16 text-[#2e2133]">
        {header}
      </h2>
    )}
    {copy && (
      <p class="text-lg md:text-xl text-center text-[#4f3c57] mb-12 max-w-3xl mx-auto leading-relaxed">
        {copy}
      </p>
    )}

    <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-8 md:gap-10 max-w-7xl mx-auto">
      {cards && cards.map((card, index) => (
        <div class={`bg-white rounded-[32px] shadow-lg p-8 md:p-10 hover:shadow-xl transition-shadow duration-300 ${cards.length === 3 && index === 2 ? 'md:col-span-2 md:max-w-md md:mx-auto lg:col-span-1 lg:max-w-none' : ''}`}>
          {card.icon && (
            <div class="flex justify-center mb-6">
              <div class="text-7xl md:text-8xl" set:html={card.icon} />
            </div>
          )}
          {card.heading && (
            <h3 class="text-2xl md:text-[2rem] font-medium text-center mb-4 text-[#2e2133] tracking-[0.01em]">
              {card.heading}
            </h3>
          )}
          {card.copy && (
            <p class="text-lg md:text-xl text-[#4f3c57] text-center mb-8 leading-relaxed">
              {card.copy}
            </p>
          )}
          {card.button && (
            <div class="flex justify-center">
              <Button href={card.button.url} variant={card.button.style || "secondary"}>
                {card.button.text}
              </Button>
            </div>
          )}
        </div>
      ))}
    </div>
  </div>
</section>
