---
import Button from "../UI/Button.astro";
import ResponsivePicture from "../UI/ResponsivePicture.astro";

const {
  title = "About Me",
  role,
  headline,
  tags = [],
  highlights = [],
  body = [],
  image,
  image_alt,
  buttons = [],
} = Astro.props;
---

<section class="py-16">
  <div class="container">
    {title && (
      <h2 class="text-center text-3xl md:text-4xl font-bold text-gray-900 mb-10">
        {title}
      </h2>
    )}

    <div class="relative overflow-hidden rounded-3xl bg-gradient-to-br from-violet-50 via-white to-purple-50 shadow-xl border border-violet-100/80">
      <div class="absolute inset-0 bg-[radial-gradient(circle_at_top_left,_rgba(124,58,237,0.08),_transparent_40%),_radial-gradient(circle_at_bottom_right,_rgba(109,40,217,0.08),_transparent_40%)]"></div>

      <div class="relative grid gap-10 md:grid-cols-[1.1fr_1.2fr] p-8 sm:p-10 md:p-14 items-center">
        <div class="flex justify-center">
          <div class="relative w-full max-w-sm">
            <div class="absolute inset-4 rounded-2xl bg-white/60 blur-2xl"></div>
            <div class="relative overflow-hidden rounded-2xl shadow-2xl ring-1 ring-violet-100">
              {image && (
                <ResponsivePicture src={image} alt={image_alt} class="w-full h-full object-cover" />
              )}
            </div>
          </div>
        </div>

        <div class="space-y-5">
          {role && <p class="text-sm uppercase tracking-[0.2em] text-purple-700/80">{role}</p>}

          {headline && (
            <h3 class="text-3xl md:text-4xl font-bold leading-tight text-gray-900">
              {headline}
            </h3>
          )}

          {tags?.length > 0 && (
            <div class="flex flex-wrap gap-3 pt-2">
              {tags.map((tag) => (
                <span class="rounded-full bg-white/80 px-4 py-1.5 text-sm font-semibold text-purple-800 shadow-sm ring-1 ring-purple-100">
                  {tag}
                </span>
              ))}
            </div>
          )}

          {highlights?.length > 0 && (
            <ul class="space-y-3 pt-3">
              {highlights.map((item) => (
                <li class="flex gap-3 text-lg text-gray-800 leading-relaxed">
                  <span class="mt-1.5 inline-flex h-2 w-2 rounded-full bg-purple-500"></span>
                  <span>{item}</span>
                </li>
              ))}
            </ul>
          )}

          {body?.length > 0 && (
            <div class="space-y-3 text-base text-gray-700 leading-relaxed">
              {body.map((paragraph) => (
                <p>{paragraph}</p>
              ))}
            </div>
          )}

          {buttons?.length > 0 && (
            <div class="flex flex-wrap gap-4 pt-2">
              {buttons.map((button) => (
                <Button
                  href={button.url}
                  variant={(button.style as any) ?? "primary"}
                  target={button.target}
                  rel={button.target === "_blank" ? "noopener noreferrer" : undefined}
                >
                  {button.text}
                </Button>
              ))}
            </div>
          )}
        </div>
      </div>
    </div>
  </div>
</section>
