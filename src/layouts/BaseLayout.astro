---
// Supports weights 300-700
import '@fontsource-variable/cormorant-garamond';
import "../styles/global.css";

import Header from "../components/Global/Header.astro";
import Footer from "../components/Global/Footer.astro";
import WhatsAppButton from "../components/UI/WhatsAppButton.astro";
import { t } from "../i18n";

const { title, description } = Astro.props;
const currentLocale = Astro.currentLocale ?? 'en';
const whatsappMessage = await t('whatsapp.message', currentLocale);
---

<!doctype html>
<html lang={Astro.currentLocale ?? 'en'}>
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <link rel="icon" type="image/svg+xml" href="./favicon.svg" />
    <meta name="generator" content={Astro.generator} />
    <meta name="description" content={description}>
    <title>{title}</title>
  </head>
  <body class="font-sans">
    <div class="flex flex-col min-h-screen">
      <Header />

      <main class="flex-grow">
        <slot />
      </main>

      <Footer />
    </div>

    <!-- WhatsApp Floating Button -->
    <WhatsAppButton 
      phoneNumber={import.meta.env.PUBLIC_WHATSAPP_PHONE}
      message={whatsappMessage}
    />
  </body>
</html>

<style>
  html,
  body {
    margin: 0;
    width: 100%;
    height: 100%;
  }
</style>
